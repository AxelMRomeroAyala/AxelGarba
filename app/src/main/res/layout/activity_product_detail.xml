<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            tools:context=".ProductDetail.ProductDetailActivity">

        <ImageView
                android:id="@+id/product_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_launcher_foreground"/>

        <TextView
                android:id="@+id/product_detail_name"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/product_item_image"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                android:textSize="@dimen/detail_title_size"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                tools:text="Chirimbolo 1500 Deluxe"/>

        <TextView
                android:id="@+id/product_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/garbaRed"
                android:textSize="@dimen/detail_price_size"
                app:layout_constraintTop_toBottomOf="@id/product_detail_name"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                tools:text="$ 85000"/>

        <TextView
                android:id="@+id/product_detail_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_discount_size"
                android:textColor="@color/sadGrey"
                app:layout_constraintTop_toBottomOf="@id/product_detail_price"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                tools:text="$ 100000"/>
        <TextView
                android:id="@+id/product_detail_discount_value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textSize="@dimen/detail_discount_size"
                android:textColor="@color/discountGreen"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/product_detail_price"
                app:layout_constraintStart_toEndOf="@id/product_detail_old_price"
                tools:text="15%"/>

        <ProgressBar
                android:id="@+id/rating_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/product_detail_old_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Space
                android:id="@+id/product_rating_spacing"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@id/product_detail_old_price"
                android:background="@color/backgroundColor"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_detail_rating_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/product_rating_spacing"
                tools:visibility="visible">

            <TextView
                    android:id="@+id/product_detail_opinions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sadGrey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline_start_rating"
                    android:text="@string/product_opinions"/>

            <TextView
                    android:id="@+id/product_detail_rating_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/rating_size"
                    android:textColor="@color/trueBlack"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_opinions_title"
                    app:layout_constraintStart_toStartOf="@id/guideline_start_rating"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end_rating"
                    tools:text="4.7"/>

            <RatingBar
                    android:id="@+id/product_detail_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RatingBar"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_rating_average"
                    app:layout_constraintStart_toStartOf="@id/guideline_start_rating"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end_rating"
                    android:stepSize="0.1"
                    android:isIndicator="true"/>

            <TextView
                    android:id="@+id/product_detail_average_from_x_opinions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sadGrey"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_rating_bar"
                    app:layout_constraintStart_toStartOf="@id/guideline_start_rating"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end_rating"
                    tools:text="@string/product_av_opinion_from"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_detail_review_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_average_from_x_opinions"
                    app:layout_constraintStart_toStartOf="@id/guideline_start_rating"/>

            <TextView
                    android:id="@+id/product_detail_view_all_reviews"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/product_detail_review_list"
                    app:layout_constraintStart_toStartOf="@id/guideline_start_rating"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end_rating"
                    android:textColor="@color/starBlue"
                    android:textSize="@dimen/detail_price_size"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/product_view_all"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".05"/>


            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".95"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".05"/>


        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".95"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
